@model ProductsListViewModel

    @foreach(var p in Model.Products){
        <div class="card border-primary m-1 p-1">
            <div class="bg-light p-1">
                <h4>
                    @p.Name
                    <span class="badge alert-success bg-primary" style="float:right">
                        <small class="text-light">@p.Price.ToString("c")</small>
                    </span>
                </h4>
            </div>
            <div class="card-text p-1">@p.Description</div>
        </div>        
    }
    <div 
        page-model="@Model.PagingInfo" 
        page-action="List" 
        page-class-enabled="true"        
        page-class="btn" 
        page-class-normal="btn-secondary"
        page-class-selected="btn-primary"         
        class="btn-group pull-right m-1">
    </div>